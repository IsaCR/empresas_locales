.card.card-body.bg-light.d-block.p-3.my-3
  .row
    .col-md-10
      = page_entries_info companies, :model => 'company', :class => 'align-middle'
    .col-md-2
      = link_to "Reset filters", reset_filterrific_url, :class => 'btn btn-secondary align-middle'
  = render_filterrific_spinner

%table.table
  %tr
    %th= filterrific_sorting_link(@filterrific, :name)
    %th Detalles
    %th Telefono
    %th Pagina Web
  - companies.each do |company|
    %tr.student
      %td.name= company.name
      %td.description= company.description
      %td.phone= company.phone
      %td.url= company.url


= will_paginate companies, renderer: WillPaginate::ActionView::LinkRendererBase